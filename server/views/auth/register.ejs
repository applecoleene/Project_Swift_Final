<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--main content-->
<main class="container">
    <% if(messages.length > 0) {%>
    <div class="alert alert-danger">
        <%= messages %>
    </div>
    <% } %>

    <div class="row">
        <div class="col-md-10 mx-auto col-lg-5">
            <div class="px-4 py-4 my-4 text-center">
                <h1 class="display-5 fw-bold">Please Register</h1>
            </div>
            <!--register form-->
            <form class="form inline-block p-4 p-md-5 border rounded-3 bg-light" method="POST">
                <fieldset class="form-group">
                    <label for="username">Username: </label>
                    <input type="text" class="form-control" name="username" placeholder="Enter username here"
                        id="username" required autofocus>
                </fieldset><br>

                <fieldset class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password here"
                        id="password" required>
                </fieldset><br>

                <fieldset class="form-group">
                    <label for="email">Email: </label>
                    <input type="text" class="form-control" name="email" placeholder="Enter email here" id="email"
                        required>
                </fieldset><br>

                <fieldset class="form-group">
                    <label for="displayName">Name: </label>
                    <input type="text" class="form-control" name="displayName" placeholder="Enter name here"
                        id="displayName" required>
                </fieldset><br>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Register">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>

            </form>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>